{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://jw387.com/schemas/vertex-output.schema.json",
  "type": "object",
  "properties": {
    "output_name": {
      "type": "string"
    },
    "glsl_type": {
      "$ref": "glsl-type.schema.json"
    },
    "location": {
      "type": "number"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "flat"
        ]
      }
    }
  },
  "required": [
    "output_name",
    "glsl_type",
    "location"
  ]
}